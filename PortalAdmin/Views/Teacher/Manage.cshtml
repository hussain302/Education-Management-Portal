@model List<TeacherModel>

@{
    ViewData["Title"] = "Teachers";
}

<div class="jumbotron bg-dark text-center text-white p-4">
    <h1> Manage @ViewData["Title"] </h1>
    <a class="btn btn-outline-success mt-2" asp-action="CreateOrEdit"> Create Teacher <i class="fa fa-plus"></i> </a>
</div>
<div>

    @if (Model != null)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Full name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Permanent</th>
                    <th>Qualification</th>
                    <th>Specialized</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.TeacherCode</td>
                        <td>@teacher.FirstName, @teacher.LastName</td>
                        <td>@teacher.Email</td>
                        <td>@teacher.Phone</td>
                        @if (teacher.IsPermanent == true)
                        {
                            <td>Permanent</td>
                        }
                        else
                        {
                            <td>Visiting</td>
                        }
                        <td>@teacher.Qualification.Name</td>
                        <td>@teacher.Specialization</td>
                        <td>
                            <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@teacher.Id"> <i class="fa-solid fa-magnifying-glass"></i> </a>
                            <a class="btn btn-outline-warning btn-sm" asp-action="CreateOrEdit" asp-route-id="@teacher.Id"> <i class="fa fa-edit"></i> </a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@teacher.Id"> <i class="fa fa-trash"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center">
            <h1> @ViewBag.message</h1>
        </div>
    }
</div>