@model TeacherCourseModel

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong> Something went wrong </strong> @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="jumbotron bg-dark text-center text-white p-4">
    <h1> @ViewData["Title"] </h1>
    <a class="btn btn-outline-success mt-2" asp-action="Manage"> Back to Manage <i class="fa fa-arrow-left"></i> </a>
</div>

<div class="mt-5">
    <form asp-action="CreateOrEdit" method="post">

        <input hidden="hidden" asp-for="Id" />
       
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Courses</label>
            <select class="form-control" asp-for="Courses.Id"> 
                <option value=""> - Select Course - </option>
                @foreach (var dept in ViewBag.courses)
                {
                    <option value="@dept.Id" >@dept.Name</option>
                }
            </select>
        </div>
        
        
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Teacher</label>
            <select class="form-control" asp-for="Teacher.Id"> 
                <option value=""> - Select Teacher - </option>
                @foreach (var dept in ViewBag.teachers)
                {
                    <option value="@dept.Id"> @dept.TeacherCode : @dept.FirstName, @dept.LastName </option>
                }
            </select>
        </div>

        <div class="mb-3 text-center">
            <button class="btn btn-outline-success"> Save </button>
        </div>
    </form>
</div>