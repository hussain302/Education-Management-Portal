@model UserModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

@if (ViewBag.message != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong> Error: </strong> @ViewBag.message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong> Note: </strong> @TempData["message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container w-50 bg-dark text-white">
    <div class="text-center">
        <h1 class="display-2"> Admin Login </h1>
    </div>
    <form asp-action="Login" method="post">
        <!-- Email input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">Email address</label>
            <input type="email" asp-for="Email" placeholder="Enter Email Address" id="form2Example1" class="form-control" />
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2">Password</label>
            <input type="password" asp-for="Password" placeholder="Enter Password" id="form2Example2" class="form-control" />

        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input"  type="checkbox" value="" id="form2Example31" checked />
                    <label class="form-check-label text-white" for="form2Example31"> Remember me </label>
                </div>
            </div>
            <br />
            <div class="text-white text-center">
                <a class="text-white" href="#!" >Forgot Password?</a>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-outline-success btn-block mb-4">Sign in</button>
        </div>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Register Your Account <a href="~/User/Register" class="text-white">Register</a></p>
        </div>
    </form>
</div>