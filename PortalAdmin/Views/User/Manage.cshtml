@model List<UserModel>
@{
    ViewData["Title"] = "Manage Admins";
}


<div class="jumbotron bg-dark text-center text-white p-4">
    <h1> Manage @ViewData["Title"] </h1>
    <a class="btn btn-outline-success mt-2" asp-action="Register"> Register Admin <i class="fa fa-plus"></i> </a>
</div>
<div>

    @if (Model != null)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Approval</th>
                    <th> Role </th>
                    <th>Options</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        @if (user.IsApproved == true)
                        {
                            <td>Approved</td>
                        }
                        else
                        {
                            <td>Not Approved</td>
                        }
                        <th>@user.Role.Name</th>
                        <td>
                            <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@user.Id"> <i class="fa-solid fa-magnifying-glass"></i> </a>
                            <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@user.Id"> <i class="fa fa-edit"></i> </a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@user.Id"> <i class="fa fa-trash"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center">
            <h1> @ViewBag.message</h1>
        </div>
    }
</div>