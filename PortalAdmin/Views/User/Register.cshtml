@model UserModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

@if (ViewBag.message != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong> Error: </strong> @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container w-50 bg-dark text-white">
    <div class="text-center">
        <h1 class="display-2"> Admin Registeration </h1>
    </div>
    <form asp-action="Register" method="post">
        <!-- Email input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">Full name</label>
            <input type="text" required="required" asp-for="Name" placeholder="Enter Full name" id="form2Example1" class="form-control" />
        </div>

        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">Email address</label>
            <input type="email" required="required" asp-for="Email" placeholder="Enter Email Address" id="form2Example1" class="form-control" />
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2">Password</label>
            <input type="password" asp-for="Password" placeholder="Enter Password" id="form2Example2" required="required" class="form-control" />
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2">Phone</label>
            <input type="text" asp-for="Phone" placeholder="Enter Phone number" id="form2Example2" required="required" class="form-control" />
        </div>
        <!-- Password input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2">Security Question</label>
            <input type="text" asp-for="SecurityQuestion" placeholder="Enter Security Question" id="form2Example2" required="required" class="form-control" />
        </div>

        <!-- Password input -->
        <div class="col form-outline mb-4">
            <label class="form-label" for="form2Example2">Security Answer</label>
            <textarea rows="2" asp-for="SecurityAnswer" placeholder="Enter Security Answer" id="form2Example2" required="required" class="form-control"></textarea>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-outline-success btn-block mb-4">Register <i class="fa fa-plus"> </i></button>
        </div>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Already have an Account? <a href="~/User/Login" class="text-white">Login</a></p>
        </div>
    </form>
</div>